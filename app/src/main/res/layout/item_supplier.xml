<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rowLayoutSupplier">

    <TextView
        android:id="@+id/txt_supplier_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="id"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/txtSupplier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSupplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="supplier_name"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/txt_supplier_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>